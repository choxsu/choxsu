<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.syc.model.entity.mybatis.dao.RoleDao">

    <resultMap type="com.syc.model.entity.mybatis.entity.Role" id="RoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="createat" column="createAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RoleMap">
        select
          id, name, createAt
        from sblog.role
        <where>
            <if test="id != null">
                and id = #{id},
            </if>
        </where>
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RoleMap">
        select
        id, name, createAt
        from sblog.role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RoleMap">
        select
          id, name, createAt
        from sblog.role
        <where>
            <if test="id != null">
                and id = #{id},
            </if>
            <if test="name != null and name != ''">
                and name = #{name},
            </if>
            <if test="createat != null">
                and createAt = #{createat},
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sblog.role(name, createAt)
        values (#{name}, #{createat})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sblog.role
        <set>
            <if test="name != null and name != ''">
                and name = #{name},
            </if>
            <if test="createat != null">
                and createAt = #{createat},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sblog.role where id = #{id}
    </delete>

</mapper>
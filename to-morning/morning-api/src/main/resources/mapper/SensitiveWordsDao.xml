<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.syc.model.entity.mybatis.dao.SensitiveWordsDao">

    <resultMap type="com.syc.model.entity.mybatis.entity.SensitiveWords" id="SensitiveWordsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="word" column="word" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="OTHER"/>
        <result property="wordPinyin" column="word_pinyin" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SensitiveWordsMap">
        select
          id, word, status, word_pinyin
        from sblog.sensitive_words
        <where>
            <if test="id != null">
                and id = #{id},
            </if>
        </where>
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SensitiveWordsMap">
        select
        id, word, status, word_pinyin
        from sblog.sensitive_words
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SensitiveWordsMap">
        select
          id, word, status, word_pinyin
        from sblog.sensitive_words
        <where>
            <if test="id != null">
                and id = #{id},
            </if>
            <if test="word != null and word != ''">
                and word = #{word},
            </if>
            <if test="status != null">
                and status = #{status},
            </if>
            <if test="wordPinyin != null and wordPinyin != ''">
                and word_pinyin = #{wordPinyin},
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sblog.sensitive_words(word, status, word_pinyin)
        values (#{word}, #{status}, #{wordPinyin})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sblog.sensitive_words
        <set>
            <if test="word != null and word != ''">
                and word = #{word},
            </if>
            <if test="status != null">
                and status = #{status},
            </if>
            <if test="wordPinyin != null and wordPinyin != ''">
                and word_pinyin = #{wordPinyin},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sblog.sensitive_words where id = #{id}
    </delete>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.syc.model.entity.mybatis.dao.BlogTagDao">

    <resultMap type="com.syc.model.entity.mybatis.entity.BlogTag" id="BlogTagMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BlogTagMap">
        select
          id, name, status
        from sblog.blog_tag
        <where>
            <if test="id != null">
                and id = #{id},
            </if>
        </where>
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BlogTagMap">
        select
        id, name, status
        from sblog.blog_tag
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BlogTagMap">
        select
          id, name, status
        from sblog.blog_tag
        <where>
            <if test="id != null">
                and id = #{id},
            </if>
            <if test="name != null and name != ''">
                and name = #{name},
            </if>
            <if test="status != null">
                and status = #{status},
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sblog.blog_tag(name, status)
        values (#{name}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sblog.blog_tag
        <set>
            <if test="name != null and name != ''">
                and name = #{name},
            </if>
            <if test="status != null">
                and status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sblog.blog_tag where id = #{id}
    </delete>

</mapper>
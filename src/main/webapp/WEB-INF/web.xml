<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>sblog</filter-name>
        <filter-class>com.jfinal.core.JFinalFilter</filter-class>
        <init-param>
            <param-name>configClass</param-name>
            <param-value>com.choxsu.common.Start</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>sblog</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--
    @WebFilter(filterName="druidWebStatFilter",urlPatterns="/*",
        initParams={
                @WebInitParam(name="exclusions",value="*.js,*.gif,*.jpg,*.bmp,*.png,*.css,*.ico,/druid/*")//忽略资源
        })
    -->
    <filter>
        <filter-name>druidStatFilter</filter-name>
        <filter-class>com.choxsu.common.druid.DruidStatFilter</filter-class>
        <!--忽略资源-->
        <init-param>
            <param-name>exclusions</param-name>
            <param-value>*.js,*.gif,*.jpg,*.bmp,*.png,*.css,*.ico,/druid/*</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>druidStatFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--
    @WebServlet(urlPatterns = "/druid/*", initParams = {
        @WebInitParam(name = "allow", value = "192.168.3.44,127.0.0.1"),// IP白名单(没有配置或者为空，则允许所有访问)
        @WebInitParam(name="deny",value="192.168.3.57"),// IP黑名单 (存在共同时，deny优先于allow)
        @WebInitParam(name="loginUsername",value="admin"),// 用户名
        @WebInitParam(name="loginPassword",value="123456"),// 密码
        @WebInitParam(name="resetEnable",value="false")// 禁用HTML页面上的“Reset All”功能
})
    -->
    <servlet>
        <servlet-name>druidServlet</servlet-name>
        <servlet-class>com.choxsu.common.druid.DruidServlet</servlet-class>
        <!--IP白名单(没有配置或者为空，则允许所有访问)-->
        <init-param>
            <param-name>allow</param-name>
            <param-value>192.168.3.44,127.0.0.1</param-value>
        </init-param>
        <!--IP黑名单 (存在共同时，deny优先于allow)-->
        <init-param>
            <param-name>deny</param-name>
            <param-value>192.168.3.57</param-value>
        </init-param>
        <!--用户名-->
        <init-param>
            <param-name>loginUsername</param-name>
            <param-value>admin</param-value>
        </init-param>
        <!--密码-->
        <init-param>
            <param-name>loginPassword</param-name>
            <param-value>123456</param-value>
        </init-param>
        <!--禁用HTML页面上的“Reset All”功能-->
        <init-param>
            <param-name>resetEnable</param-name>
            <param-value>false</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>druidServlet</servlet-name>
        <url-pattern>/assets/druid/*</url-pattern>
    </servlet-mapping>

</web-app>